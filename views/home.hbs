<div class="row">
        <div class="col-sm-8">
                                
                <h1>Minion Events</h1>
                <br>
                <div >
                {{#events}}
                    <div class="container shadow p-3 mb-5 bg-white rounded">
                        <h2 class="text-primary">{{ title }}</h2>
                        <p class="text-primary"> On {{date}}</p>
                        <p>{{ description }}</p>
                        <p>{{ location}}</p>
                        <div class="row">
                            <div class="col-sm-2">
                                <form action="/like" method="post">
                                    <input type="hidden" id="id" name="id" value={{id}}>
                                    <input type="submit" class="btn btn-info"  value="Like">
                                    <p class="text-info">{{like}}</p>
                                </form>
                                
                            </div>
                            <div class="col-sm-2">
                                <form action="/delEvent" method="post">
                                    <input type="hidden" id="id" name="id" value={{id}}>
                                    <input type="submit" class="btn btn-info "  value="Delete">
                                </form>
                            </div>
                            <div class="col-sm-1">
                                <form action="/getEvent" method="post">
                                    <input type="hidden" id="id" name="id" value={{id}}>
                                    <input type="submit" class="btn btn-info "  value="Update">
                                </form>
                            </div>
                            <div class="col-sm-7">
                            </div>
                        </div>
                        
                    </div>
                {{/events}}
                </div>

        </div>
        <div class="col-sm-4">
        <h3>Add Events</h3> <br>
                    <form class="form-horizontal" action="/event" method="post">
                    <div class="form-group">
                        <label>Title :</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Enter title">                      
                    </div>
                    <div class="form-group">
                        <label  for="description">Description:</label>
                        <input type="text" class="form-control" name="description" id="description" placeholder="Enter description">
                    </div>
                    <div class="form-group">
                        <label  for="location">Location:</label>
                        <input type="text" class="form-control" name="location" id="location" placeholder="Enter location">                        
                    </div>
                     <div class="form-group">
                        <label  for="date">Date:</label>
                        <input type="date" class="form-control" name="date" id="date" placeholder="Enter date">                        
                    </div>
        
                    <div>
                        <input type="hidden" id="like" name="like" value=0> 
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-secondary"  name="submit" value="Add Event" />
                        </div>
                    </div>
                    
                </form>
                <iframe
                width="400"
                height="300"
                
                frameborder="0" style="border:0"
                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAmuWBqs8D2Scrvjz7oqnNxD_TAGnjaGYo&q=India" allowfullscreen>
                </iframe>

        </div>
    </div>

